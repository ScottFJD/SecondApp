<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/cv_store_card">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_lesson_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/store_map1"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_look_lesson_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:layout_gravity="bottom"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btn_reservation"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="#ffcc00"
            android:textColor="#37343e"
            android:text="预约"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="right|bottom" />

        <TextView
            android:id="@+id/tv_lesson_address"
            android:background="#66000000"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="今天 周二 19:00-14:00/苏州市高新区运河路47号"
            android:textColor="@color/mdtp_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp" />

        <TextView
            android:id="@+id/tv_lesson_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="减脂营一期·lucky"
            android:textColor="@color/mdtp_white"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>


        <ImageView
            android:id="@+id/iv_lesson_collect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home_collect_n3x"
            android:layout_gravity="top|right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            />

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top|left">


            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/rcp_bespeak"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="1dp"
                app:rcProgress="14"
                app:rcSecondaryProgress="0"
                app:rcMax="16"
                app:rcRadius="2dp"
                app:rcBackgroundPadding="0dp"
                app:rcReverse="false"
                app:rcProgressColor="@color/colorPrimary"
                app:rcBackgroundColor="@color/mdtp_white" />

            <TextView
                android:id="@+id/tv_bespeak_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="14/16"
                android:textSize="12dp"
                android:textColor="#544f5f"/>


        </FrameLayout>

        <!--<com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:layout_marginTop="40dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_gravity="top|left"-->
            <!--app:rcProgress="14"-->
            <!--app:rcSecondaryProgress="0"-->
            <!--app:rcMax="16"-->
            <!--app:rcRadius="2dp"-->
            <!--app:rcBackgroundPadding="0dp"-->
            <!--app:rcReverse="false"-->
            <!--app:rcProgressColor="@color/colorPrimary"-->
            <!--app:rcBackgroundColor="@color/mdtp_white" />-->


    </FrameLayout>


</android.support.v7.widget.CardView>