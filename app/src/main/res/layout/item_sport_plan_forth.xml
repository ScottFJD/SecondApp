<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:paddingBottom="15dp"
    android:layout_marginTop="1dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView173"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="@string/steps_one"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView103"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView173"
        app:srcCompat="@drawable/sport_plan_content_v2_shape" />

    <ImageView
        android:id="@+id/iv_sport_status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/imageView103"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/scheme_step_s"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView103" />

    <TextView
        android:id="@+id/textView176"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="热身运动：10分钟"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView103"
        app:layout_constraintTop_toTopOf="@+id/imageView103" />

    <TextView
        android:id="@+id/textView179"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sport_project_shape"
        android:padding="3dp"
        android:text="跑步"
        android:textColor="#544f5f"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView176"
        app:layout_constraintTop_toBottomOf="@+id/textView176" />

    <TextView
        android:id="@+id/textView182"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/sport_project_shape"
        android:padding="3dp"
        android:text="跳绳"
        android:textColor="#544f5f"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView179"
        app:layout_constraintLeft_toRightOf="@+id/textView179" />

    <TextView
        android:id="@+id/textView183"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/sport_project_shape"
        android:padding="3dp"
        android:text="热身活动"
        android:textColor="#544f5f"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView182"
        app:layout_constraintLeft_toRightOf="@+id/textView182" />

    <TextView
        android:id="@+id/textView184"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/sport_project_shape"
        android:padding="3dp"
        android:text="拉伸"
        android:textColor="#544f5f"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView183"
        app:layout_constraintLeft_toRightOf="@+id/textView183" />

    <TextView
        android:id="@+id/tv_cang_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="13dp"
        android:text="推荐:距您2km处的也跑健身舱"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView179"
        app:layout_constraintTop_toBottomOf="@+id/textView182" />

    <TextView
        android:id="@+id/tv_go_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sport_go_run_shape"
        android:paddingBottom="5dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="5dp"
        android:text="去跑步"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cang_distance"
        app:layout_constraintRight_toRightOf="@+id/imageView103" />
</android.support.constraint.ConstraintLayout>