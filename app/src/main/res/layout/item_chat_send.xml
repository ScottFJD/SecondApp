<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="70dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_grey">

    <com.scottfu.sflibrary.customview.CircleImageView
        android:layout_alignParentRight="true"
        android:id="@+id/civ_send_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/y_you"
        app:border_color="@color/bg_grey"
        app:border_width="0dp"/>
    <TextView
        android:id="@+id/tv_send_content"
        android:layout_toLeftOf="@id/civ_send_head"
        android:layout_marginRight="5dp"
        android:background="@drawable/yellow_box_right_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好，想咨询个问题。。。。"
        android:textColor="@color/text_color"
        android:gravity="left|center_vertical"/>
</RelativeLayout>