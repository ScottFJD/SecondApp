<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView24"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/login_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="选择不同的健身目的，也跑将为你推荐针对性的训练视频"
        android:textColor="@color/account_hint_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_purpose_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="减脂"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/health_reduce_fat_n"
        android:textColor="@color/account_hint_text"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/view2" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/account_hint_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_purpose_1"
        android:id="@+id/view2" />

    <TextView
        android:id="@+id/tv_purpose_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/health_gain_muscle_n"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:text="增肌"
        android:textColor="@color/account_hint_text"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view48"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/view48"
        app:layout_constraintHorizontal_bias="0.502" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/account_hint_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_purpose_2"
        android:id="@+id/view48" />



    <TextView
        android:id="@+id/tv_purpose_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/health_relaxed_n"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:text="缓解肌肉疲劳"
        android:textColor="@color/account_hint_text"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/view48"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view49"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/view49" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/account_hint_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_purpose_3"
        android:id="@+id/view49" />

    <TextView
        android:id="@+id/tv_purpose_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/health_pressure_n"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:text="释放压力"
        android:textColor="@color/account_hint_text"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/view49"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view50"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/view50" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/account_hint_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_purpose_4"
        android:id="@+id/view50" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>