<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/login_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textColor="@color/account_hint_text"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView35"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:background="@drawable/account_detail"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView114"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/view43"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="出生日期"
        android:textColor="@color/account_hint_text"
        app:layout_constraintTop_toBottomOf="@+id/view43"
        app:layout_constraintRight_toLeftOf="@+id/imageView35"
        app:layout_constraintLeft_toRightOf="@+id/imageView35" />

    <TextView
        android:id="@+id/tv_birth_date"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/yellow_text_color"
        android:background="@drawable/account_detail"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView115"
        app:layout_constraintRight_toLeftOf="@+id/imageView35"
        app:layout_constraintLeft_toRightOf="@+id/imageView35" />

    <TextView
        android:id="@+id/textView117"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身高cm"
        android:textColor="@color/account_hint_text"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_birth_date"
        app:layout_constraintRight_toLeftOf="@+id/imageView35"
        app:layout_constraintLeft_toRightOf="@+id/imageView35"
        app:layout_constraintHorizontal_bias="0.501" />

    <EditText
        android:id="@+id/tv_high"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/account_detail"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/yellow_text_color"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView35"
        app:layout_constraintRight_toLeftOf="@+id/imageView35"
        app:layout_constraintTop_toBottomOf="@+id/textView117" />

    <TextView
        android:id="@+id/textView119"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:text="体重kg"
        android:textColor="@color/account_hint_text"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_high"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/tv_weight"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/account_detail"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/yellow_text_color"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView119" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="2dp"
        android:layout_height="25dp"
        android:background="@color/account_hint_text"
        app:layout_constraintLeft_toRightOf="@+id/view43"
        app:layout_constraintRight_toLeftOf="@+id/view43"
        app:layout_constraintTop_toTopOf="@+id/view43"
        android:id="@+id/view44" />

    <ImageView
        android:id="@+id/iv_boy"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:srcCompat="@drawable/health_boy_s"
        app:layout_constraintTop_toTopOf="@+id/view44"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view43"
        app:layout_constraintRight_toLeftOf="@+id/view44"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_boy"
        app:layout_constraintLeft_toLeftOf="@+id/iv_boy"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/iv_boy"
        app:layout_constraintHorizontal_bias="0.428" />

    <ImageView
        android:id="@+id/iv_girl"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:srcCompat="@drawable/health_girl_n"
        app:layout_constraintTop_toTopOf="@+id/view44"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/view43"
        app:layout_constraintLeft_toRightOf="@+id/view44"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="女"
        android:textColor="@color/account_hint_text"
        app:layout_constraintLeft_toLeftOf="@+id/iv_girl"
        app:layout_constraintRight_toRightOf="@+id/iv_girl"
        app:layout_constraintTop_toBottomOf="@+id/iv_girl" />

    <View
        android:id="@+id/v_boy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_boy"
        app:layout_constraintLeft_toLeftOf="@+id/view43"
        app:layout_constraintRight_toLeftOf="@+id/view44"
        app:layout_constraintTop_toTopOf="@+id/view44" />

    <View
        android:id="@+id/v_girl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_girl"
        app:layout_constraintLeft_toRightOf="@+id/v_boy"
        app:layout_constraintRight_toRightOf="@+id/view43"
        app:layout_constraintTop_toTopOf="@+id/view44" />

</android.support.constraint.ConstraintLayout>