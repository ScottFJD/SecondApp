<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/tv_order_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/dialog_refunds"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"

        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:text="@string/dialog_refund1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />


    <Button
        android:id="@+id/btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="8dp"
        android:background="#ffcc00"
        android:text="         "
        android:textSize="17sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>