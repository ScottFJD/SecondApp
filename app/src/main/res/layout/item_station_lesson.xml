<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/bg_white">

    <TextView
        android:id="@+id/tv_lesson_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="8:00-9:00"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_lesson_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动感光影跑"
        android:textColor="@color/text_color"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lesson_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_lesson_people"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_lesson_time" />

    <TextView
        android:id="@+id/tv_lesson_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12人"
        android:textColor="@color/text_color"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lesson_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_lesson_address"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_lesson_name" />

    <TextView
        android:id="@+id/tv_lesson_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="多功能操房"
        android:textColor="@color/text_hint_title_color"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lesson_people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_lesson_people" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"/>
</android.support.constraint.ConstraintLayout>