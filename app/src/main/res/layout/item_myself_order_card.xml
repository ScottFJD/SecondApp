<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buy_image01" />

    <TextView
        android:id="@+id/tv_my_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="减肥营一期（线上）"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:text="有效期至 2017-5-30"
        app:layout_constraintBottom_toBottomOf="@+id/iv_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_my_order_title" />

    <TextView
        android:id="@+id/tv_n_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="未付款"
        android:textColor="@color/yellow_text_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view23"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_grey"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/iv_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_content" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_order_button_shape"
        android:gravity="center"
        android:text="继续支付"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_delete_order"
        app:layout_constraintTop_toBottomOf="@+id/view23"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_delete_order"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/my_order_button_n_shape"
        android:gravity="center"
        android:text="删除订单"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/view23" />
</android.support.constraint.ConstraintLayout>