    <ImageView
        android:id="@+id/imageView96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imageView89"
        app:layout_constraintTop_toTopOf="@+id/imageView27"
