<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_seven_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="六"
        android:textColor="@color/food_text_color"
        app:layout_constraintLeft_toRightOf="@+id/tv_six_day"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_six_day" />

    <TextView
        android:id="@+id/tv_six_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五"
        android:textColor="@color/food_text_color"
        app:layout_constraintLeft_toRightOf="@+id/tv_five_day"
        app:layout_constraintRight_toLeftOf="@+id/tv_seven_day"
        app:layout_constraintTop_toTopOf="@+id/tv_five_day" />

    <TextView
        android:id="@+id/tv_five_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="四"
        android:textColor="@color/food_text_color"
        app:layout_constraintLeft_toRightOf="@+id/tv_four_day"
        app:layout_constraintRight_toLeftOf="@+id/tv_six_day"
        app:layout_constraintTop_toTopOf="@+id/tv_four_day" />

    <TextView
        android:id="@+id/tv_four_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三"
        app:layout_constraintLeft_toRightOf="@+id/tv_three_day"
        app:layout_constraintRight_toLeftOf="@+id/tv_five_day"
        app:layout_constraintTop_toTopOf="@+id/tv_three_day" />

    <TextView
        android:id="@+id/tv_three_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二"
        android:textColor="@color/food_text_color"
        app:layout_constraintLeft_toRightOf="@+id/tv_two_day"
        app:layout_constraintRight_toLeftOf="@+id/tv_four_day"
        app:layout_constraintTop_toTopOf="@+id/tv_two_day" />

    <TextView
        android:id="@+id/tv_two_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一"
        android:textColor="@color/food_text_color"
        app:layout_constraintLeft_toRightOf="@+id/tv_one_day"
        app:layout_constraintRight_toLeftOf="@+id/tv_three_day"
        app:layout_constraintTop_toTopOf="@+id/tv_one_day" />

    <TextView
        android:id="@+id/tv_one_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="日"
        android:textColor="@color/food_text_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_two_day"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tue"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="18"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_three_day"
        app:layout_constraintRight_toRightOf="@+id/tv_three_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_three_day" />

    <TextView
        android:id="@+id/tv_sat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="22"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_seven_day"
        app:layout_constraintRight_toRightOf="@+id/tv_seven_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_seven_day" />

    <TextView
        android:id="@+id/tv_fri"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="21"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_six_day"
        app:layout_constraintRight_toRightOf="@+id/tv_six_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_six_day" />

    <TextView
        android:id="@+id/tv_thu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="20"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toRightOf="@+id/tv_wed"
        app:layout_constraintRight_toLeftOf="@+id/tv_fri"
        app:layout_constraintTop_toBottomOf="@+id/tv_five_day" />

    <TextView
        android:id="@+id/tv_wed"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/food_week_oval_shape"
        android:gravity="center"
        android:text="今"
        android:textColor="@color/bg_white"
        app:layout_constraintLeft_toLeftOf="@+id/tv_four_day"
        app:layout_constraintRight_toRightOf="@+id/tv_four_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_four_day" />

    <TextView
        android:id="@+id/tv_mon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="17"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toRightOf="@+id/tv_sun"
        app:layout_constraintRight_toLeftOf="@+id/tv_tue"
        app:layout_constraintTop_toBottomOf="@+id/tv_two_day" />

    <TextView
        android:id="@+id/tv_sun"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@color/bg_white"
        android:gravity="center"
        android:text="16"
        android:textColor="@color/text_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_one_day"
        app:layout_constraintRight_toRightOf="@+id/tv_one_day"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_one_day"
        app:layout_constraintHorizontal_bias="0.454" />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="@color/bg_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/view37" />

</android.support.constraint.ConstraintLayout>