<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_grey"
    android:paddingBottom="50dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_inclusive_image"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/local_tyrant_bg" />

    <ImageView
        android:id="@+id/imageView141"
        android:layout_width="0dp"
        android:layout_height="295dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_inclusive_image"
        app:srcCompat="@color/bg_white" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="选择包场类型"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView141" />

    <ImageView
        android:id="@+id/iv_running"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_kick"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:srcCompat="@drawable/running_exercise" />

    <ImageView
        android:id="@+id/iv_kick"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/iv_hiit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_running"
        app:layout_constraintTop_toTopOf="@+id/iv_running"
        app:srcCompat="@drawable/kickboxing" />

    <ImageView
        android:id="@+id/iv_hiit"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_kick"
        app:layout_constraintTop_toTopOf="@+id/iv_kick"
        app:srcCompat="@drawable/hiit_bg" />

    <ImageView
        android:id="@+id/iv_running_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_running"
        app:layout_constraintEnd_toEndOf="@+id/iv_running"
        app:srcCompat="@drawable/sport_choose_n" />

    <ImageView
        android:id="@+id/iv_kick_status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_kick"
        app:layout_constraintEnd_toEndOf="@+id/iv_kick"
        app:srcCompat="@drawable/sport_choose_n" />

    <ImageView
        android:id="@+id/iv_kick_status3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_hiit"
        app:layout_constraintEnd_toEndOf="@+id/iv_hiit"
        app:srcCompat="@drawable/sport_choose_n" />

    <ImageView
        android:id="@+id/imageView142"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_kick"
        app:srcCompat="@color/bg_grey" />

    <ImageView
        android:id="@+id/imageView143"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView142"
        app:srcCompat="@color/bg_grey" />

    <ImageView
        android:id="@+id/imageView144"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView143"
        app:srcCompat="@color/bg_grey" />

    <TextView
        android:id="@+id/textView186"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="场地"
        android:textColor="@color/text_hint_title_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView142" />

    <TextView
        android:id="@+id/textView197"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="是否需要教练"
        android:textColor="@color/text_hint_title_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView143" />

    <TextView
        android:id="@+id/textView204"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="健身时间选择"
        android:textColor="@color/text_hint_title_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView144" />

    <TextView
        android:id="@+id/tv_inclusive_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="(限20人)"
        android:textColor="@color/text_hint_title_color"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_inclusive_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_inclusive_name" />

    <TextView
        android:id="@+id/tv_inclusive_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="多功能动感操房"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView143"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView142" />

    <ImageView
        android:id="@+id/imageView145"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView144"
        app:srcCompat="@color/bg_grey" />

    <TextView
        android:id="@+id/textView210"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="包场费用"
        app:layout_constraintBottom_toBottomOf="@+id/imageView141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView145" />

    <ImageView
        android:id="@+id/iv_need_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView144"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView143"
        app:srcCompat="@drawable/coach_no" />

    <ImageView
        android:id="@+id/iv_choose_inclusive"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView145"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView144"
        app:srcCompat="@drawable/buy_right" />

    <TextView
        android:id="@+id/tv_inclusive_time_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="未选择"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView145"
        app:layout_constraintEnd_toStartOf="@+id/iv_choose_inclusive"
        app:layout_constraintTop_toBottomOf="@+id/imageView144" />

    <TextView
        android:id="@+id/tv_inclusive_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/RMB"
        android:textColor="@color/text_red"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView141"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView145" />

    <ImageView
        android:id="@+id/iv_agreement_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textView214"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView141"
        app:srcCompat="@drawable/agreement_no_selected" />

    <TextView
        android:id="@+id/textView214"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意"
        android:textColor="@color/text_hint_title_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_agreement_protocol"
        app:layout_constraintEnd_toStartOf="@+id/tv_user_protocol"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_agreement_protocol"
        app:layout_constraintTop_toTopOf="@+id/iv_agreement_protocol" />

    <TextView
        android:id="@+id/tv_user_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户协议"

        android:textColor="#1089dc"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView214"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView214" />

    <TextView
        android:id="@+id/textView206"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="跑步操"
        android:textColor="@color/bg_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_running"
        app:layout_constraintEnd_toEndOf="@+id/iv_running"
        app:layout_constraintStart_toStartOf="@+id/iv_running"
        app:layout_constraintTop_toTopOf="@+id/iv_running" />

    <TextView
        android:id="@+id/textView208"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="搏击操"
        android:textColor="@color/bg_white"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView206"
        app:layout_constraintEnd_toEndOf="@+id/iv_kick"
        app:layout_constraintStart_toStartOf="@+id/iv_kick" />

    <TextView
        android:id="@+id/textView212"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="HIIT"
        android:textColor="@color/bg_white"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView208"
        app:layout_constraintEnd_toEndOf="@+id/iv_hiit"
        app:layout_constraintStart_toStartOf="@+id/iv_hiit" />


</android.support.constraint.ConstraintLayout>