<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cl_lesson_card"
    android:layout_height="117dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="130dp"
        android:layout_height="85dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buy_image01" />

    <TextView
        android:id="@+id/tv_my_lesson_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="减脂营一期"
        android:background="#66000000"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/imageView17"
        app:layout_constraintRight_toRightOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_my_lesson_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="198"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/tv_my_lesson_remaining_day"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余时间"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView17"
        app:layout_constraintRight_toLeftOf="@+id/tv_my_lesson_remaining_day"
        app:layout_constraintTop_toTopOf="@+id/tv_my_lesson_remaining_day" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余课程"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView17"
        app:layout_constraintRight_toLeftOf="@+id/tv_my_lesson_remaining_club"
        app:layout_constraintTop_toTopOf="@+id/tv_my_lesson_remaining_club"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/tv_my_lesson_remaining_day"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/bg_lesson_text"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="25"
        app:layout_constraintLeft_toRightOf="@+id/textView15"
        app:layout_constraintRight_toLeftOf="@+id/tv_day"
        app:layout_constraintTop_toTopOf="@+id/tv_day" />

    <TextView
        android:id="@+id/tv_my_lesson_remaining_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_lesson_text"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="12"
        app:layout_constraintLeft_toRightOf="@+id/textView17"
        app:layout_constraintRight_toLeftOf="@+id/tv_club"
        app:layout_constraintTop_toTopOf="@+id/tv_club" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_my_lesson_remaining_day"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_club"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tv_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="节"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_my_lesson_remaining_club"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:id="@+id/iv_overdue"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/my_overdue" />
</android.support.constraint.ConstraintLayout>