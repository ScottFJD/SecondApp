<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/cv_shopping_list_card">



<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/bg_white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_lesson"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/lesson_pic4"
        app:layout_constraintHorizontal_bias="0.0" />

    <CheckBox
        android:id="@+id/cb_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_lesson"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_shopping_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#66000000"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:text="减脂营一期"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@+id/iv_lesson"
        app:layout_constraintLeft_toRightOf="@+id/iv_lesson"
        app:layout_constraintBottom_toTopOf="@+id/iv_lesson"
        app:layout_constraintTop_toBottomOf="@+id/iv_lesson" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:srcCompat="@drawable/lesson_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="￥198"
        android:textColor="@color/text_red"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cb_down"
        app:layout_constraintRight_toLeftOf="@+id/cb_down"
        app:layout_constraintTop_toTopOf="@+id/cb_down" />

</android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>